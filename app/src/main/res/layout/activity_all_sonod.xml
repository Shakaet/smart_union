<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#4CAF50"
        tools:context=".all_sonod">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardElevation="20dp"
            android:backgroundTint="#4CAF50"
            app:cardCornerRadius="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:background="@drawable/custom_edittext">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#4CAF50"
                        android:drawableTop="@drawable/sonod"
                        android:id="@+id/but1"
                        android:paddingTop="15sp"
                        android:drawablePadding="15sp"
                        android:textSize="20sp"
                        android:textColor="#FFC107"
                        android:layout_weight="1"
                        android:textStyle="bold"

                        android:text="বেকারত্ব সনদ"></Button>

                    <Button
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#4CAF50"
                        android:drawableTop="@drawable/sonod"
                        android:id="@+id/but2"
                        android:paddingTop="15sp"
                        android:drawablePadding="15sp"
                        android:textSize="20sp"
                        android:textColor="#FFC107"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="ভূমিহীন সনদ"></Button>


                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#4CAF50"
                        android:drawableTop="@drawable/sonod"
                        android:id="@+id/but3"
                        android:paddingTop="15sp"
                        android:drawablePadding="15sp"
                        android:textSize="20sp"
                        android:textColor="#FFC107"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="বিবাহিত সনদ">

                    </Button>

                    <Button
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#4CAF50"
                        android:drawableTop="@drawable/sonod"
                        android:id="@+id/but4"
                        android:paddingTop="15sp"
                        android:drawablePadding="15sp"
                        android:textSize="18sp"
                        android:textColor="#FFC107"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="প্রতিবন্ধী সনদ">

                    </Button>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#4CAF50"
                        android:drawableTop="@drawable/sonod"
                        android:id="@+id/but5"
                        android:paddingTop="15sp"
                        android:drawablePadding="15sp"
                        android:textSize="20sp"
                        android:textColor="#FFC107"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="নাগরিক সনদ">

                    </Button>

                    <Button
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#4CAF50"
                        android:drawableTop="@drawable/sonod"
                        android:id="@+id/but6"
                        android:paddingTop="15sp"
                        android:drawablePadding="15sp"
                        android:textSize="18dp"
                        android:textColor="#FFC107"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="চারিত্রিক সনদ">

                    </Button>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#4CAF50"
                        android:drawableTop="@drawable/sonod"
                        android:id="@+id/but7"
                        android:paddingTop="15sp"
                        android:drawablePadding="15sp"
                        android:textSize="20sp"
                        android:textColor="#FFC107"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="ওয়ারিশ সনদ">

                    </Button>

                    <Button
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#4CAF50"
                        android:drawableTop="@drawable/sonod"
                        android:id="@+id/but8"
                        android:paddingTop="15sp"
                        android:drawablePadding="15sp"
                        android:textSize="20dp"
                        android:textColor="#FFC107"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="মৃত্যু সনদ">

                    </Button>


                </LinearLayout>




























            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>






</ScrollView>


