<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#4CAF50"
        tools:context=".onnaonno">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardElevation="20dp"
            android:backgroundTint="#4CAF50"
            app:cardCornerRadius="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:background="@drawable/custom_edittext">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#4CAF50"
                        android:drawableTop="@drawable/medicine"
                        android:id="@+id/but1"
                        android:paddingTop="15sp"
                        android:drawablePadding="15sp"
                        android:textSize="20sp"
                        android:textColor="#FFC107"
                        android:layout_weight="1"
                        android:textStyle="bold"

                        android:text="ওষুধ তথ্য"></Button>

                    <Button
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#4CAF50"
                        android:drawableTop="@drawable/doctor"
                        android:id="@+id/but2"
                        android:paddingTop="15sp"
                        android:drawablePadding="15sp"
                        android:textSize="20sp"
                        android:textColor="#FFC107"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="ডাক্তার খুজুন"></Button>


                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#4CAF50"
                        android:drawableTop="@drawable/edu"
                        android:id="@+id/but3"
                        android:paddingTop="15sp"
                        android:drawablePadding="15sp"
                        android:textSize="20sp"
                        android:textColor="#FFC107"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="শিক্ষাপ্রতিষ্ঠান সমূহ
">

                    </Button>

                    <Button
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#4CAF50"
                        android:drawableTop="@drawable/mosque"
                        android:id="@+id/but4"
                        android:paddingTop="15sp"
                        android:drawablePadding="15sp"
                        android:textSize="20sp"
                        android:textColor="#FFC107"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="ধর্মীয় উপাসনালয়">

                    </Button>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#4CAF50"
                        android:drawableTop="@drawable/jobs"
                        android:id="@+id/but5"
                        android:paddingTop="15sp"
                        android:drawablePadding="15sp"
                        android:textSize="20sp"
                        android:textColor="#FFC107"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="চাকরি বিজ্ঞপ্তি
">

                    </Button>




                </LinearLayout>





































            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>






</ScrollView>


